<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1><%= @restaurant.name %></h1>
      <h3><%= @restaurant.category.name %></h3>
    </div>

    <div class="col-md-4">
      <img src="<%= @restaurant.image %>" alt="" class="img-responsive">
      <br>
      <div class="well">
        <ul class="list-unstyled">
          <li><strong>Opening Hour:</strong> <%= @restaurant.opening_hours %></li>
          <li><strong>Tel:</strong> <%= @restaurant.tel %></li>
          <li><strong>Address:</strong> <%= @restaurant.address %></li>
        </ul>
      </div>
    </div>
    <div class="col-md-8">
      <%= simple_format @restaurant.description %>
    </div>
    <div class="col-md-12">
      <%#= link_to "Back to Index", @back_url, class:"btn btn-primary" %>
      <%= link_to "Back to Index", url_for(request.env["HTTP_REFERER"] || wzht_root_path), class: "btn btn-primary"%>
    </div>
    <div class="clearfix"></div>
    <hr>
  </div>
</div>