<div class="container">
  <div class="row">
    <%= render partial: "shared/nav_tabs" %>
    <h2>Top 10 人氣餐廳</h2>
    <hr>
      <% @top_restaurants.each do |restaurant| %>
      <div class="ranking-item">
        <div class="col-md-3 col-xs-5">
          <%= image_tag restaurant.image.url, class: "img-responsive" %>
        </div>
        <div class="col-md-9 col-xs-7">
          <h4>
            <%= link_to restaurant.name, restaurant_path(restaurant) %>
            <span class="label label-default">收藏數：<%= restaurant.favorites_count %></span>
          </h4>
          <p><%= truncate(restaurant.description, length: 200) %></p>
          <%= link_to "Show", restaurant_path(restaurant), class: "btn btn-primary" %>
          <%= render partial: "shared/favorite", locals:{restaurant: restaurant} %>
        </div>
        <div class="clearfix"></div>
      </div>
    <% end %>
  </div>
</div>