<div class="container">
  <div class="row">
    <div class="col-xs-3">
    <div class="text-center">
      <%= image_tag @user.avatar.url %>
    </div>
    </div>
    <div class="col-xs-9">
      <h3><%= @user.name %></h3>
      <h4><%= @user.email %></h4>
      <p><%= simple_format(@user.intro) %></p>
      <% if @user == current_user %>
        <%= link_to "Edit Profile",  edit_user_path(@user), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <div class="clearfix"></div>
</div>